<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro.Login"
    android:orientation="vertical"
    android:background="@drawable/fondo_login"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="57dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/logo"
                    android:layout_marginTop="35dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20sp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:text="Bienvenido"
                    android:textColor="#0F71F2"
                    android:textSize="23sp"
                    android:layout_marginTop="2sp"
                    />


                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/tlUsername"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginTop="15sp"
                    android:ems="15"
                    android:hint="Correo"
                    android:textColor="#0511F2"
                    android:textColorHint="#0511F2"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:hintAnimationEnabled="true"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@null"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dynapuff"
                        android:inputType="textEmailAddress"
                        android:textColor="#0511F2"
                        android:textColorHint="#0511F2" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle"
                    android:hint="Contraseña"
                    app:boxBackgroundMode="outline"
                    android:layout_marginTop="15sp"
                    android:layout_margin="10sp"
                    android:ems="15"
                    android:textColor="#0511F2"
                    android:textColorHint="#0511F2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:passwordToggleEnabled="false"
                    app:endIconTint="@color/teal_200"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:fontFamily="@font/dynapuff"
                        android:textColor="#0511F2"
                        android:textColorHint="#0511F2"

                        />

                </com.google.android.material.textfield.TextInputLayout>


                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-100sp"
                    android:fontFamily="@font/dynapuff"
                    android:text="Recuérdame"
                    android:textColor="#202528" />

                <Button
                    android:id="@+id/btnlogin"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:text="iniciar sesión"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="#0C6EFC"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dynapuff"
                        android:text="¿No tienes cuenta?"
                        android:textColor="#202528"
                        />

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dynapuff"
                        android:text="Registrate"
                        android:layout_marginLeft="5dp"
                        android:textColor="#1271FD"
                        android:background="@android:color/transparent"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:text="He olvidado mi contraseña"
                    android:textColor="#1271FD"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:text="-Inicia sesión con-"
                    android:textColor="#202528"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20sp">


                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/icons8_facebook_nuevo_72___" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/icons8_logo_de_google_72___" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="287dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#202528"
                    android:fontFamily="@font/dynapuff"
                    android:gravity="center"
                    android:text="Copyryght © 2023"
                    android:textColor="#FFFFFF"

                    />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>




</LinearLayout>