<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro.Registro"
    android:background="@drawable/fondoregister"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:padding="15sp"
            android:background="@drawable/roundedlayout"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis primeros auxilitos"
                android:fontFamily="@font/dynapuff"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:padding="15sp"
                android:background="@drawable/grandient"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:fontFamily="@font/dynapuff"
                android:textSize="30sp"
                android:textColor="#fe0001"
                />

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_marginTop="15sp"
                android:ems="15"
                android:hint="Nombre"
                android:textColor="#0c30ff"
                android:textColorHint="#0c30ff"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:hintAnimationEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:inputType="textPersonName"
                    android:textColor="#0c30ff"
                    android:textColorHint="#0c30ff"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_marginTop="15sp"
                android:ems="15"
                android:hint="Correo"
                android:textColor="#0c30ff"
                android:textColorHint="#0c30ff"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:hintAnimationEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:inputType="textEmailAddress"
                    android:textColor="#0c30ff"
                    android:textColorHint="#0c30ff"
                    />

            </com.google.android.material.textfield.TextInputLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escoge tu genero"
                android:fontFamily="@font/dynapuff"
                android:textSize="20sp"
                android:textColor="#0d6ffc"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:fontFamily="@font/dynapuff"
                    android:text="Masculino"
                    android:textColor="#0d6ffc"
                    tools:text="Masculino" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:text="Femenino"
                    android:textColor="#0d6ffc"
                    android:enabled="true"
                    />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:text="Otro"
                    android:textColor="#0d6ffc"
                    android:enabled="true"
                    />


            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/fechaNacimiento"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_marginTop="15sp"
                android:ems="15"
                android:hint="Fecha de nacimiento"
                android:textColor="#0c30ff"
                android:textColorHint="#0c30ff"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:hintAnimationEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:inputType="date"
                    android:textColor="#0c30ff"
                    android:textColorHint="#0c30ff"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/black"
                android:hint="Contraseña"
                app:boxBackgroundMode="outline"
                android:layout_marginTop="15sp"
                android:layout_margin="10sp"
                android:ems="15"
                android:textColor="#0c30ff"
                android:textColorHint="#0c30ff"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/dynapuff"
                    android:textColor="#0c30ff"
                    android:textColorHint="#0c30ff"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/passwordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/black"
                android:hint="Confirmar contraseña"
                app:boxBackgroundMode="outline"
                android:layout_marginTop="15sp"
                android:layout_margin="10sp"
                android:ems="15"
                android:textColor="#0c30ff"
                android:textColorHint="#0c30ff"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/dynapuff"
                    android:textColor="#0c30ff"
                    android:textColorHint="#0c30ff"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <CheckBox
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dynapuff"
                android:text="Acepto los terminos de servicio y politica de privacidad"
                android:textColor="#2e3337"
                />


            <Button
                android:id="@+id/btn_register"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dynapuff"
                android:text="Registrarse"
                android:layout_marginTop="10sp"
                android:backgroundTint="#fed001"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


            <Button
                android:id="@+id/btn_regresar"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dynapuff"
                android:text="Regresar"
                android:layout_marginTop="10sp"
                android:background="@drawable/grandientbutton"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>